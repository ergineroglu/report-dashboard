		<title>Scenario View</title>
		
		<portlet>
			<key>scenario_textbox</key>
			<title>Evam Scenarios</title>
			<type>textbox</type>
			<width>40</width>
			<data-source>
				<type>constant</type>
				<values>
					<delimiter>,</delimiter>
					<value>A Event</value>
					<value>B Event</value>
					<value>C Event</value>
					<value>D Event</value>
					<value>E Event</value>
				</values>
			</data-source>
		</portlet>
		
		<portlet>
			<key>scenario_select_box</key>
			<title>Evam Scenarios</title>
			<type>selectbox</type>
			<width>60</width>
			<data-source>
				<type>constant</type>
				<values>
					<delimiter>\|</delimiter>
					<value>0|A Event</value>
