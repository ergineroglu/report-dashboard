		</portlet>
		
		<portlet>
			<key>scenario_values3</key>
			<title>Evam Scenarios</title>
			<type>areachart</type>
			<width>40</width>
			<x-axis>Event Time</x-axis>
			<y-axis>Event Count</y-axis>
			<x-value-type>time</x-value-type> <!-- Olası değerler: string, time, number -->
			<x-value-format>%d.%m.%Y</x-value-format>
			<y-value-type>number</y-value-type> 
			<data-source>
				<type>database</type><!-- Olası değerler: database, constant -->
				<query>select to_char(log_time, 'DD.MM.YYYY'), count(*) from (select * from int_log_table order by id asc limit 500000 ) as q group by to_char(log_time, 'DD.MM.YYYY')</query>
			</data-source>
		</portlet>
		
